<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.elkam.myapplication.MainActivity">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="587dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_light"
            android:text="@string/hello_this_is_ios_calculator"
            android:gravity="center"
            android:background="@android:color/black"/>


        <EditText
            android:id="@+id/texte"
            android:layout_width="401dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:enabled="false"
            android:gravity="right|bottom"
            android:minHeight="187dp"
            android:maxHeight="187dp"
            android:text=""
            android:textColor="@android:color/background_light"
            android:textSize="50sp"
            tools:enabled="false" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:background="?attr/colorButtonNormal"
                android:minHeight="80dp"
                android:minWidth="98dp"
                android:text="AC" />

            <Button
                android:id="@+id/buttonas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:background="?attr/colorButtonNormal"
                android:minHeight="80dp"
                android:minWidth="98dp"
                android:text="±" />

            <Button
                android:id="@+id/buttonp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="0"
                android:background="?attr/colorButtonNormal"
                android:minHeight="80dp"
                android:minWidth="98dp"
                android:text="%" />

            <Button
                android:id="@+id/buttond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="0"
                android:background="@android:color/holo_orange_dark"
                android:minHeight="80dp"
                android:minWidth="100dp"
                android:text="÷"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:background="?android:attr/colorControlHighlight"
                android:minHeight="80dp"
                android:minWidth="98dp"
                android:text="7" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:background="?android:attr/colorControlHighlight"
                android:minHeight="80dp"
                android:minWidth="98dp"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:background="?android:attr/colorControlHighlight"
                android:minHeight="80dp"
                android:minWidth="98dp"
                android:text="9" />

            <Button
                android:id="@+id/buttonm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="1"
                android:background="@android:color/holo_orange_dark"
                android:minHeight="80dp"
                android:minWidth="100dp"
                android:text="×"
                android:textColor="@android:color/background_light" />


            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:background="?android:attr/colorControlHighlight"
                android:minHeight="80dp"
                android:minWidth="98dp"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:background="?android:attr/colorControlHighlight"
                android:minHeight="80dp"
                android:minWidth="98dp"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="2"
                android:background="?android:attr/colorControlHighlight"
                android:minHeight="80dp"
                android:minWidth="98dp"
                android:text="6" />

            <Button
                android:id="@+id/buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="2"
                android:background="@android:color/holo_orange_dark"
                android:minHeight="80dp"
                android:minWidth="100dp"
                android:text="-"
                android:textColor="@android:color/background_light" />


            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:background="?android:attr/colorControlHighlight"
                android:minHeight="80dp"
                android:minWidth="98dp"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:background="?android:attr/colorControlHighlight"
                android:minHeight="80dp"
                android:minWidth="98dp"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="3"
                android:background="?android:attr/colorControlHighlight"
                android:minHeight="80dp"
                android:minWidth="98dp"
                android:text="3" />

            <Button
                android:id="@+id/buttona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="3"
                android:background="@android:color/holo_orange_dark"
                android:minHeight="80dp"
                android:minWidth="100dp"
                android:text="+"
                android:textColor="@android:color/background_light" />

        </GridLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="?android:attr/colorControlHighlight"
                android:minHeight="80dp"
                android:minWidth="196dp"
                android:text="0" />

            <Button
                android:id="@+id/buttont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="?android:attr/colorControlHighlight"
                android:minHeight="80dp"
                android:minWidth="98dp"
                android:text="," />

            <Button
                android:id="@+id/buttonr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@android:color/holo_orange_dark"
                android:minHeight="80dp"
                android:minWidth="100dp"
                android:text="="
                android:textColor="@android:color/background_light" />

        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
