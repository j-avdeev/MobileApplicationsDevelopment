<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.test.clock.MainActivity"
    tools:showIn="@layout/activity_main">


    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:headerBackground="?android:attr/colorControlHighlight"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="-3dp" />

    <Button
        android:id="@+id/alarm_on"
        android:layout_width="135dp"
        android:layout_height="0dp"
        android:text="Запустить"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginBottom="129dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/alarm_off"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:text="Остановить"
        android:textColorLink="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="129dp"
        app:layout_constraintLeft_toRightOf="@+id/alarm_on"
        android:layout_marginLeft="105dp" />

    <EditText
        android:id="@+id/updateTimeText"
        android:layout_width="354dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="updateTimeText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="85dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="384dp"
        tools:layout_editor_absoluteX="-54dp" />
</android.support.constraint.ConstraintLayout>
